html,
body {
  @apply flex flex-grow overflow-hidden;

  background-color: hsl(var(--a-body-bg-c));
}

/* stylelint-disable-next-line selector-id-pattern */
#__nuxt {
  @apply fixed right-0 left-0 top-0 bottom-0;
}

html {
  @apply [scrollbar-gutter:none];
}

.page-enter-active,
.page-leave-active {
  /* transition: all cubic-bezier(0.23, 1, 0.32, 1) 0.3s; */

  @apply transition-all animate-ease animate-duration-300;
}

.page-enter-from,
.page-leave-to {
  @apply opacity-50 blur-lg filter;
}

